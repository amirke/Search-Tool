{
  "productName": "Search Tool",
  "version": "0.21.0",
  "identifier": "com.searchtool.dev",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "npm run build", 
    "devUrl": "http://localhost:1420",
    "frontendDist": "../Frontend/build"
  },
  "app": {
    "withGlobalTauri": false,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Search tool 0.21 - KV Labs",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "",
    "category": "DeveloperTool",
    "shortDescription": "A fast text search tool using ripgrep",
    "longDescription": "A desktop application for quickly searching text in files using ripgrep"
  },
  "plugins": {}
} 